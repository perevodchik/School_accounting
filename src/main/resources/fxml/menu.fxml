<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Button?>
<GridPane prefWidth="1150.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="ui.controllers.MenuController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Button fx:id="btnZhurnal" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleButtonClicks"
            prefHeight="181.0" prefWidth="242.0" stylesheets="@../css/fullpackstyling.css" text="Журнал">
    </Button>
    <Button fx:id="btnStudents" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleButtonClicks"
            prefHeight="181.0" prefWidth="242.0" stylesheets="@../css/fullpackstyling.css" text="Учні"
            GridPane.columnIndex="1">
    </Button>
    <Button fx:id="btnTimetable" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleButtonClicks"
            prefHeight="181.0" prefWidth="242.0" stylesheets="@../css/fullpackstyling.css" text="Табелі"
            GridPane.columnIndex="2">
    </Button>
    <Button fx:id="btnDiscipline" contentDisplay="TOP" mnemonicParsing="false" prefHeight="181.0"
            prefWidth="242.0" onAction="#handleButtonClicks"
            stylesheets="@../css/fullpackstyling.css" text="Дисципліни" GridPane.columnIndex="2"
            GridPane.rowIndex="1">
    </Button>
    <Button fx:id="btnSchedule" contentDisplay="TOP" mnemonicParsing="false" prefHeight="181.0"
            prefWidth="242.0" onAction="#handleButtonClicks"
            stylesheets="@../css/fullpackstyling.css" text="Розклад" GridPane.columnIndex="1"
            GridPane.rowIndex="1">
    </Button>
    <Button fx:id="btnClasses" contentDisplay="TOP" mnemonicParsing="false" prefHeight="181.0"
            prefWidth="242.0" onAction="#handleButtonClicks"
            stylesheets="@../css/fullpackstyling.css" text="Класи" GridPane.rowIndex="1">
    </Button>
</GridPane>